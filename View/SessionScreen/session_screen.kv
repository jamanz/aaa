#:import utils kivy.utils

<PreviewRecordedTreeContent>
    id: preview_recorded
    orientation: "vertical"
    spacing: "5dp"
    padding: ["1dp", "10dp", "1dp", "30dp"]
    size_hint_y: None
    height: "400dp"

    MDLabel:
        markup: True
        size_hint: .9, 0.1
        id: tree_number
        #spacing: "10dp"
        font_size: "13sp"
        text: f"Tree Number: [b]{root.tree_number}[/b]\nTree Specie: [b]{root.tree_specie}[/b]\nSpecie value: [b]{root.specie_value}[/b]"

    MDSeparator:

    MDLabel:
        markup: True
        id: stem_number
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Stem Number: [b]{root.stem_number}[/b]\nTree Diameter: [b]{root.tree_diameter}[/b]"

    MDSeparator:

    MDLabel:
        markup: True
        id: stem_number
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Crown Diameter: [b]{root.crown_diameter}[/b]\nTree Height: [b]{root.tree_height}[/b]"

    MDSeparator:


    MDLabel:
        markup: True
        id: health_condition
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Health condition: [b]{root.health_condition}[/b]\nTree location: [b]{root.tree_location}[/b]\nCrown Cone: [b]{root.crown_cone}[/b]\nCrown value: [b]{root.crown_value}[/b]"





<PreUploadDialogContent>:
    pos_hint: {"center_x":.5, "center_y":.5}
    minimum_size: "100dp", "400dp"
    num_of_rec: self.number_of_records
    chosen_title: self.chosen_worksheet_title
    _txt_left_pad: 2
    MDLabel:

        markup: True
        #size_hint: 0.8, 0.8
        text: f"[b]{root.num_of_rec}[/b] records will be uploaded to [b]{root.chosen_title}[/b] worksheet"
        font_size: "12sp"
        #text: "def text"


<TreeItem>:
    #size_hint: 1, .5
    on_release: root.show_tree_preview(self)
    #font_size: "12sp"
    _txt_left_pad: "92dp"


    IconLeftWidget:
        icon: "camera"
        size_hint_y: .5
#        pos_hint: {"x": .8, "center_y": .5}
        on_release: root.make_photo_for_tree(root)
        opacity: 1 if root.can_delete else 0
        disabled: not root.can_delete

    IconRightWidget:
        size_hint_y: .5
        #pos_hint: {"x": .9, "center_y": .5}
        opacity: 1 if root.can_delete else 0
        disabled: not root.can_delete
        icon: 'delete'
        on_release: root.delete_item(root)


#    TreeItemIconsContainer:
#        id: tree_item_icons_container
#        spacing: "20dp"
#        MDIconButton:




<TreeItemsPage>:
    viewclass: "TreeItem"
    orientation: "vertical"
    spacing: "5dp"
    padding: "10dp"
    RecycleBoxLayout:

        default_size: None, "72dp"


        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        #height: f"{root.height}dp"
        orientation: "vertical"


<SessionScreenView>:
    MDBoxLayout:
        id: box_layout
        orientation: 'vertical'
        size_hint: 1, 1
        spacing: '5dp'
        #md_bg_color: utils.get_color_from_hex('#c1c72f')

        MDTopAppBar:

            elevation: 2
            title: root.app_bar_title
            anchor_title: "left"
            left_action_items: [["arrow-left", lambda x: root.app.go_prev_screen()]]

        TreeItemsPage:
            md_bg_color: utils.get_color_from_hex('#c1c72f')
            id: tree_items_page
            size_hint: 1, 1

        MDGridLayout:
            #md_bg_color: utils.get_color_from_hex('#975c0e')
            cols:2
            padding: "10dp"
            spacing: "10dp"
            #pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 1, .1
            id: buttons_grid
            opacity: 1 if root.show_buttons else 0

            MDFillRoundFlatButton:
                text: "New Record"
                size_hint: .4, .5
                on_release: root.go_to_add_data_screen()

            MDFillRoundFlatButton:
                text: "Upload Session"
                size_hint: .4, .5
                on_release: root.start_upload_dialog()



