<HebrewTextField>
    font_size: 20
    text_size: self.size
    valign: 'middle'



<addDataCard>:
    id: card_id
    size_hint: 1, 1
    pos_hint: {"center_x": .5}
    radius: "20dp"
    padding: "2dp"
    elevation: 1
    feature_input: input_field_id
    MDBoxLayout:

        orientation: 'vertical'
        padding: "5dp"
        spacing: "5dp"
        #md_bg_color: utils.get_color_from_hex('#c1c72f')

        MDTextField:
            id: input_field_id
            font_name_hint_text: "Arimo"
            font_name: "Arimo"
            size_hint_x: .95
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

            multiline: False

            hint_text: "Chose feature to input " + f"[font=Arimo]{'בחר פרמטר'[::-1]}[/font]"
            focus: True
            helper_text_mode: "on_focus"

            on_text_validate: root.add_data_view.get_input_feature_value(root.chosen_feature, self.text)
            on_text: root.add_data_view.initiate_suggestions(root.chosen_feature, self.text)

        MDSeparator:


        MDRelativeLayout:
            size_hint: 0.95, 0.3
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            spacing: "3dp"
            padding: "1dp"
            id: buttons_box

            FeatureButton:
                id: tree_number_btn
                on_release: root.choose_feature(self)
                text: "Tree Number"
                pos_hint: {'x': 0, 'top': 1}

            FeatureButton:
                id: tree_specie_btn
                on_release: root.choose_feature(self)
                pos_hint: {'x': .33, 'top': 1}
                text: "Tree specie"

            FeatureButton:
                id: stem_number_btn
                on_release: root.choose_feature(self)
                pos_hint: {'x': 0.66, 'top': 1}
                text: "Stem number"

            FeatureButton:
                id: tree_diameter_btn
                on_release: root.choose_feature(self)
                text: "Tree diameter"
                pos_hint: {'x': 0, 'bot': 1}

            FeatureButton:
                id: crown_diameter_btn
                on_release: root.choose_feature(self)
                text: "Crown diameter"
                pos_hint: {'x': .33, 'bot': 1}

            FeatureButton:
                id: height_btn
                on_release: root.choose_feature(self)
                text: "Tree height"
                pos_hint: {'x': .66, 'bot': 1}

        MDSeparator:

        MDRelativeLayout:
            id: health_condition_layout
            spacing: "3dp"
            #md_bg_color: utils.get_color_from_hex('#725c0e')
            size_hint: 1, .3
            pos_hint: {"center_x": .5, "center_y": .3}

            MDLabel:
                size_hint: 1, 0.2
                pos_hint: {"center_x": 0.5, "top": 0.9}
                font_name: 'Arimo'
                text: "מצב בריאותי"[::-1]
                #text: "Health Condition"

                font_size: "13sp"
                halign: "center"
            HealthConditionControl:
                id: health_segment



        MDSeparator:

        MDRelativeLayout:
            spacing: "3dp"
            #md_bg_color: utils.get_color_from_hex('#725c0e')
            size_hint: 1, 0.3
            pos_hint: {"center_x": .5, "center_y": .2}

            MDLabel:
                size_hint: 1, 0.2
                pos_hint: {"center_x": 0.5, "top": 0.9}
                font_size: "13sp"
                #text: "Tree Location"
                font_name: "Arimo"
                text: "מיקום העץ"[::-1]
                halign: "center"

            LocationControl:
                id: location_segment


        MDSeparator:

        MDRelativeLayout:
            spacing: "3dp"
            #md_bg_color: utils.get_color_from_hex('#725c0e')
            size_hint: 1, 0.3
            pos_hint: {"center_x": .5, "center_y": .3}
            MDLabel:
                size_hint: 1, 0.2
                pos_hint: {"center_x": 0.5, "top": 0.9}
                font_size: "13sp"
                #text: "Crown is Cone"
                font_name: "Arimo"
                text: "עץ צריפי"[::-1]
                halign: "center"
            CrownConeControl:
                id: crown_cone_segment









