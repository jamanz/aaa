<addDataCard>:
    id: card_id
    size_hint: 1, 1
    pos_hint: {"center_x": .5}
    radius: "20dp"
    padding: "2dp"
    elevation: 2

    MDBoxLayout:

        orientation: 'vertical'
        padding: "5dp"
        spacing: "5dp"
        #md_bg_color: utils.get_color_from_hex('#c1c72f')

        MDTextField:
            size_hint_x: .95
            #add_data_screen: root.parent.parent.parent
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            id: input_field_id
            multiline: False
            hint_text: "Chose feature to input"

            #helper_text: "This will disappear when you click off"
            #helper_text_mode: "on_focus"
            on_text_validate: root.parent.parent.parent.get_input_feature_value(root.chosen_feature, self.text)
            on_text: root.parent.parent.parent.initiate_suggestions(root.chosen_feature, self.text)

        MDSeparator:


        MDRelativeLayout:
            #cols: 3
            size_hint: 0.95, 0.3
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            #orientation: 'lr-tb'
            spacing: "3dp"
            padding: "1dp"
            #md_bg_color: utils.get_color_from_hex('#975c0e')

            FeatureButton:
                id: tree_number_btn
                on_press: root.choose_feature(self)
                #on_release: root.release_but(self)
                text: "Tree Number"
                pos_hint: {'x': 0, 'top': 1}
            FeatureButton:
                id: tree_specie_btn
                on_press: root.choose_feature(self)
                pos_hint: {'x': .33, 'top': 1}
                #on_release: root.release_but(self)
                text: "Tree specie"
            FeatureButton:
                id: stem_number_btn
                on_press: root.choose_feature(self)
                #on_release: root.release_but(self)
                pos_hint: {'x': 0.66, 'top': 1}
                text: "Stem number"
            FeatureButton:
                id: tree_diameter_btn
                on_press: root.choose_feature(self)
                text: "Tree diameter"
                pos_hint: {'x': 0, 'bot': 1}
            FeatureButton:
                id: crown_diameter_btn
                on_press: root.choose_feature(self)
                text: "Crown diameter"
                pos_hint: {'x': .33, 'bot': 1}
            FeatureButton:
                id: height_btn
                on_press: root.choose_feature(self)
                text: "Height"
                pos_hint: {'x': .66, 'bot': 1}

        MDSeparator:

        MDRelativeLayout:
            id: health_condition_layout
            spacing: "3dp"
            #md_bg_color: utils.get_color_from_hex('#725c0e')
            size_hint: 1, .3
            pos_hint: {"center_x": .5, "center_y": .3}

            MDLabel:
                size_hint: 1, 0.2
                pos_hint: {"center_x": 0.5, "top": 0.9}
                text: "Health Condition"
                font_size: "13sp"
                halign: "center"
            HealthConditionControl:
                id: health_segment



        MDSeparator:

        MDRelativeLayout:
            spacing: "3dp"
            #md_bg_color: utils.get_color_from_hex('#725c0e')
            size_hint: 1, 0.3
            pos_hint: {"center_x": .5, "center_y": .2}

            MDLabel:
                size_hint: 1, 0.2
                pos_hint: {"center_x": 0.5, "top": 0.9}
                font_size: "13sp"
                text: "Tree Location"
                halign: "center"

            LocationControl:
                id: location_segment


        MDSeparator:

        MDRelativeLayout:
            spacing: "3dp"
            #md_bg_color: utils.get_color_from_hex('#725c0e')
            size_hint: 1, 0.3
            pos_hint: {"center_x": .5, "center_y": .3}
            MDLabel:
                size_hint: 1, 0.2
                pos_hint: {"center_x": 0.5, "top": 0.9}
                font_size: "13sp"
                text: "Crown is Cone"
                halign: "center"
            CrownConeControl:
                id: crown_cone_segment









