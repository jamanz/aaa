#:import addDataCard View.AddDataScreen.components.addDataCard

<CameraButtonsLayout>



<AddDataScreenView>:
    MDBoxLayout:
        spacing: "5dp"
        id: screen_box_layout
        orientation: 'vertical'
        size_hint: 1, 1
        #md_bg_color: utils.get_color_from_hex('#c1c72f')

        MDTopAppBar:
            title: root.app_bar_title
            elevation: "2dp"
            type_height: "medium"
            #headline_text: "Headline"
            left_action_items: [["arrow-left", lambda x: root.cancel_record()]]

        MDRelativeLayout:
            #orientation: 'vertical'
            size_hint: .95, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            id: box_layout

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: "5dp"
            padding: "6dp"
            size_hint_y: 0.2
            MDFillRoundFlatIconButton:
                text: "Make photo"
                icon: "camera"
                size_hint: .3, None
                on_release: root.app.go_next_screen("add data screen", "photo screen")

            MDFillRoundFlatIconButton:
                text: "Preview"
                icon: "account-eye"
                size_hint: .3, None
                on_release: root.show_preview()
            MDFillRoundFlatIconButton:
                text: "Confirm"
                icon: "check-circle"
                size_hint: .3, None
                on_release: root.save_record_and_back_to_session_screen()



<PreviewContent>
    id: preview
    orientation: "vertical"
    spacing: "5dp"

    size_hint_y: None
    height: "300dp"

    MDLabel:
        markup: True
        size_hint: .9, 0.1
        id: tree_number
        #spacing: "10dp"
        font_size: "13sp"
        text: f"Tree Number: [b]{root.tree_number}[/b]\nTree Specie: [b]{root.tree_specie}[/b]\nSpecie value: [b]{root.specie_value}[/b]"



    MDSeparator:

    MDLabel:
        markup: True
        id: stem_number
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Stem Number: [b]{root.stem_number}[/b]\nTree Diameter: [b]{root.tree_diameter}[/b]"

    MDSeparator:

    MDLabel:
        markup: True
        id: stem_number
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Crown Diameter: [b]{root.crown_diameter}[/b]\nTree Height: [b]{root.tree_height}[/b]"

    MDSeparator:


    MDLabel:
        markup: True
        id: health_condition
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Health condition: [b]{root.health_condition}[/b]\nTree location: [b]{root.tree_location}[/b]\nCrown Cone: [b]{root.crown_cone}[/b]\nCrown value: [b]{root.crown_value}[/b]"








