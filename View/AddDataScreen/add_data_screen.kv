#:import addDataCard View.AddDataScreen.components.addDataCard

<AddDataScreenView>:
    #data_card: add_data_card
    MDBoxLayout:
        spacing: "5dp"
        id: screen_box_layout
        orientation: 'vertical'
        size_hint: 1, 1
        #md_bg_color: utils.get_color_from_hex('#c1c72f')

        MDTopAppBar:
            title: root.app_bar_title
            elevation: 2
            anchor_title: "left"
            left_action_items: [["arrow-left", lambda x: root.cancel_record()]]

        MDRelativeLayout:
            #orientation: 'vertical'
            size_hint: .95, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            id: box_layout


        MDBoxLayout:
            orientation: 'horizontal'
            spacing: "5dp"
            padding: "6dp"
            size_hint_y: 0.2
            #MDFillRoundFlatIconButton:
             #   text: "Photo"
              #  icon: "camera"
               # size_hint: .3, None
                #on_release: root.make_photo_for_tree()

            MDFillRoundFlatIconButton:
                text: "Preview"
                icon: "account-eye"
                size_hint: .45, None
                on_release: root.show_preview()
            MDFillRoundFlatIconButton:
                text: "Confirm"
                icon: "check-circle"
                size_hint: .45, None
                on_release: root.show_submit_record_dialog()



<SubmitRecordContent>
    id: submit_record
    orientation: "vertical"
    spacing: "2dp"
    padding: "2dp"
    size_hint_y: None
    height: "400dp"

    MDLabel:
        markup: True
        size_hint: .9, 0.1
        id: tree_number
        #spacing: "10dp"
        font_size: "13sp"
        text: f"Tree Number: [b]{root.tree_number}[/b]\nTree Specie: [b]{root.tree_specie}[/b]\nSpecie value: [b]{root.specie_value}[/b]"

    MDSeparator:

    MDLabel:
        markup: True
        id: stem_number
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Stem Number: [b]{root.stem_number}[/b]\nTree Diameter: [b]{root.tree_diameter}[/b]"

    MDSeparator:

    MDLabel:
        markup: True
        id: stem_number
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Crown Diameter: [b]{root.crown_diameter}[/b]\nTree Height: [b]{root.tree_height}[/b]"

    MDSeparator:


    MDLabel:
        markup: True
        id: health_condition
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Health condition: [b]{root.health_condition}[/b]\nTree location: [b]{root.tree_location}[/b]\nCrown Cone: [b]{root.crown_cone}[/b]\nCrown value: [b]{root.crown_value}[/b]"

    MDTextField:
        font_size: "13sp"
        id: comments_id
        hint_text: "Additional comments"
        multiline: True
        on_text: root.raise_window_for_comment()
        on_text_validate: root.set_comment(self.text)


<PreviewContent>
    id: preview
    orientation: "vertical"
    spacing: "5dp"
    mg_bg_color: app.theme_cls.accent_color

    size_hint_y: None
    height: "400dp"

    MDLabel:
        markup: True
        size_hint: .9, 0.1
        id: tree_number
        #spacing: "10dp"
        font_size: "13sp"
        text: f"Tree Number: [b]{root.tree_number}[/b]\nTree Specie: [b]{root.tree_specie}[/b]\nSpecie value: [b]{root.specie_value}[/b]"



    MDSeparator:

    MDLabel:
        markup: True
        id: stem_number
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Stem Number: [b]{root.stem_number}[/b]\nTree Diameter: [b]{root.tree_diameter}[/b]"

    MDSeparator:

    MDLabel:
        markup: True
        id: stem_number
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Crown Diameter: [b]{root.crown_diameter}[/b]\nTree Height: [b]{root.tree_height}[/b]"

    MDSeparator:


    MDLabel:
        markup: True
        id: health_condition
        size_hint: .9, 0.1
        font_size: "13sp"
        text: f"Health condition: [b]{root.health_condition}[/b]\nTree location: [b]{root.tree_location}[/b]\nCrown Cone: [b]{root.crown_cone}[/b]\nCrown value: [b]{root.crown_value}[/b]"








