#:import addDataCard View.AddDataScreen.components.addDataCard

<AddDataScreenView>:
    MDBoxLayout:
        spacing: "3dp"
        id: screen_box_layout
        orientation: 'vertical'
        size_hint: 1, 1
        #md_bg_color: utils.get_color_from_hex('#c1c72f')

        MDTopAppBar:
            title: root.app_bar_title
            elevation: "3dp"
            type_height: "medium"
            headline_text: "Headline"
            left_action_items: [["arrow-left", lambda x: root.cancel_record()]]

        MDRelativeLayout:
            #orientation: 'vertical'
            size_hint: .95, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            id: box_layout

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: "5dp"
            padding: "6dp"
            size_hint_y: 0.2
            MDFillRoundFlatIconButton:
                text: "Preview"
                icon: "account-eye"
                size_hint: .4, None
                on_release: root.show_preview()
            MDFillRoundFlatIconButton:
                text: "Confirm"
                icon: "check-circle"
                size_hint: .4, None
                on_release: root.save_record_and_back_to_session_screen()



<PreviewContent>
    id: preview
    orientation: "vertical"
    spacing: "28dp"
    size_hint_y: None
    height: "160dp"
    width: "80dp"

    MDLabel:
        id: tree_number
        text: "Tree Number: " + root.tree_number

    MDSeparator:

    MDLabel:
        id: tree_specie
        text: "Tree Specie: " + root.tree_specie

    MDSeparator:

    MDLabel:
        id: stem_number
        text: "Stem Number: " + root.stem_number

    MDSeparator:






