#:import utils kivy.utils

<SessionItem>:
    text: root.session_name
    on_press: root.callback(self)
    md_bg_color: utils.get_color_from_hex('#a1211f')
    #size_hint: 1, .2
    font_size: "13sp"
    _txt_left_pad: "15dp"

    IconRightWidget:
        size_hint: .1, .5
        pos_hint: {"x": .95, "center_y": .4}
        opacity: 1 if root.can_delete else 0
        disabled: not root.can_delete
        icon: 'delete'
        on_press: root.delete_session(root)


<SessionsPage>:
    viewclass: "SessionItem"
    spacing: "5dp"
    padding: "10dp"
    orientation: "vertical"
    RecycleBoxLayout:
        md_bg_color: utils.get_color_from_hex('#c1c72f')
        #padding: "5dp"
        #spacing: "5dp"
        orientation: "vertical"
        default_size: None, f"{72}dp"
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        #height: f"{root.height}dp"



<ListSessionsScreenView>:
    MDBoxLayout:
        #md_bg_color: utils.get_color_from_hex('#c1c72f')
        orientation: 'vertical'
        #size_hint: 1, 1
        #md_bg_color: utils.get_color_from_hex('#c1c72f')
        #padding: '1dp'
        spacing: '5dp'


        MDTopAppBar:
            #size_hint: 1, .2
            title: root.app_bar_title
            elevation: 2
            anchor_title: "left"
            left_action_items: [["arrow-left", lambda x: root.app.go_prev_screen()]]


        SessionsPage:
            id: sessions_page
            #size_hint: 1, 1







