<HomeScreenView>:
    size_hint: 1, 1
    BoxLayout:
        orientation: "vertical"
        NavigationButton:
            id: new_ses_btn
            text: "Start new session"
            on_release:
                app.manager_screens.current = "session screen"
                app.manager_screens.transition.direction = "left"
                root.start_new_session()

        NavigationButton:
            text: "Incomplete sessions"
            on_release:
                self.background_color =  [1, 0, 0, 1]
                app.manager_screens.current = "list sessions screen"
                root.start_incomplete_sessions()
        NavigationButton:
            text: "Recorded sessions"
            on_release:
                app.manager_screens.current = "list sessions screen"
                root.start_recorded_sessions()


<NavigationButton@Button>:
    size_hint: 1, .3



