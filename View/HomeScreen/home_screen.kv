<HomeScreenView>:
    size_hint: 1, 1

    BoxLayout:
        id: buttons_layo
        orientation: "vertical"

        NavigationButton:
            id: new_ses_btn
            text: "Start new session"
            on_press:
                root.start_new_session()

        NavigationButton:
            text: "Incomplete sessions"
            on_press:
                root.start_incomplete_sessions()

        NavigationButton:
            text: "Recorded sessions"
            on_press:
                root.start_recorded_sessions()


<NavigationButton@MDFillRoundFlatButton>:
    size_hint: 1, .3



