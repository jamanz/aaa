<HomeScreenView>:
    size_hint: 1, 1
    BoxLayout:
        id: buttons_layo
        orientation: "vertical"
        NavigationButton:
            id: new_ses_btn
            text: "Start new session"
            on_press:
                root.start_new_session()

        NavigationButton:
            text: "Incomplete sessions"
            on_release:
                self.background_color =  [1, 0, 0, 1]
                root.start_incomplete_sessions()

        NavigationButton:
            text: "Recorded sessions"
            on_release:
                root.start_recorded_sessions()


<NavigationButton@MDFillRoundFlatButton>:
    size_hint: 1, .3



