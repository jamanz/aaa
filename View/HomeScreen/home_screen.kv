<GoogleSheetsDialogContent>:
    id: gsheet_dialog
    orientation: "vertical"
    spacing: "20dp"
    MDLabel:
        text: f"You authorized as:\n{root.user_email}"


<CustomWorkSheetButton>:
    size_hint: .9, .3
    icon: 'arrow-left-bottom'
    icon_color: 'white'

<WorksheetChoiceDialogContent>:
    id: upload_dialog
    orientation: "vertical"
    spacing: "10dp"
    size_hint_y: None
    height: "200dp"
    width: "80dp"

    MDBoxLayout:
        id: ws_buttons_layout

        orientation: "vertical"
        size_hint: 1, .9
        spacing: "5dp"
        padding: "5dp"
        #md_bg_color: utils.get_color_from_hex('#975c0e')


<HomeScreenView>:
    size_hint: 1, 1
#    FloatLayout:
#        orientation: 'vertical'

    canvas.before:
        Rectangle:
            source: 'assets/images/TREEZ-LOGO-RGB.png'
            size: [self.size[0], self.size[1]-220]
            pos: [root.pos[0], root.pos[1]+250]


    BoxLayout:
        size_hint: .5, .3
        spacing: "5dp"
        pos_hint: {"center_x": .5, "center_y": .2}
        id: buttons_layo
        orientation: "vertical"



        NavigationButton:
            id: new_ses_btn
            text: "Start new session"
            on_press:
                root.start_new_session_dialog()

        NavigationButton:
            text: "Incomplete sessions"
            on_press:
                root.start_incomplete_sessions()

        NavigationButton:
            text: "Recorded sessions"
            on_press:
                root.start_recorded_sessions()

        NavigationButton:
            text: "Auth in Google"
            on_press:
                root.start_login()


<NavigationButton@MDFillRoundFlatButton>:
    size_hint: 1, .2
    #font_size: '20sp'


<DialogContent>
    id: dialog
    orientation: "vertical"
    spacing: "10dp"
    size_hint_y: None
    height: "80dp"
    width: "80dp"

    MDTextField:
        id: session_name
        hint_text: "Session Name"
        required: False

    MDRaisedButton:
        id: date_picker
        text: root.date
        size_hint_x: .7
        pos_hint: {'center_x': .5, 'center_y': .5}
        on_release: root.show_date_picker()

