<GoogleSheetsDialogContent>:
    id: gsheet_dialog
    orientation: "vertical"
    spacing: "20dp"
    MDLabel:
        text: f"You logged in as :\n{root.user_email}"
        #text: f"You logged in"


<CustomWorkSheetButton>:
    size_hint: .9, .3
    icon: 'arrow-left-bottom'
    icon_color: 'white'

<WorksheetChoiceDialogContent>:
    id: upload_dialog
    orientation: "vertical"
    spacing: "10dp"
    size_hint_y: None
    height: "200dp"
    width: "80dp"

    MDBoxLayout:
        id: ws_buttons_layout

        orientation: "vertical"
        size_hint: 1, .9
        spacing: "5dp"
        padding: "5dp"
        #md_bg_color: utils.get_color_from_hex('#975c0e')


<HomeScreenView>:
    size_hint: 1, 1

    Image:
        #logo without caption
        #source: 'assets/images/TREEZ-LOGO-BG.png'

        #logo with
        source: 'assets/TREEZ_LOGO_RGB.png'
        size: [self.texture_size[0]/0.8, self.texture_size[1]/0.8]
        pos: [root.pos[0], root.pos[1]+90]

    BoxLayout:
        size_hint: .5, .3
        spacing: "5dp"
        pos_hint: {"center_x": .5, "center_y": .2}
        id: buttons_layo
        orientation: "vertical"



        NavigationButton:
            id: new_ses_btn
            text: "Start new session"
            on_press:
                root.start_new_session_dialog()

        NavigationButton:
            id: incomplete_ses_btn
            text: "Incomplete sessions"
            on_press:
                root.start_incomplete_sessions()

        NavigationButton:
            id: completed_ses_btn
            text: "Recorded sessions"
            on_press:
                root.start_recorded_sessions()

        MDFillRoundFlatButton:
            id: login_btn
            text: "Auth in Google"
            is_visible: True
            opacity: 1 if self.is_visible else 0
            disabled: not self.is_visible
            size_hint: 1, .2
            on_press:
                root.start_login()


<NavigationButton>:
    size_hint: 1, .2
    #font_size: '20sp'
    opacity: 1 if root.is_visible else 0
    disabled: not root.is_visible

<DialogContent>
    id: dialog
    orientation: "vertical"
    spacing: "10dp"
    size_hint_y: None
    height: "80dp"
    width: "80dp"

    MDTextField:
        id: session_name
        hint_text: "Session Name"
        required: False

    MDRaisedButton:
        id: date_picker
        text: root.date
        size_hint_x: .7
        pos_hint: {'center_x': .5, 'center_y': .5}
        on_release: root.show_date_picker()

